extends layout

block content

    div(class='container')
        form(class='inputForm' method='POST' action='')
            h3 become an admin
            h4 enter the secret password!
            fieldset
                label(for='adminPassword') secret password:
                input(name='adminPassword' id='adminPassword' placeholder='secret password' required=true type='password')
            div(class='buttons')
                button(type='submit') submit
            if errors 
                ul(class='errors')
                    for error in errors
                        li!= error.msg