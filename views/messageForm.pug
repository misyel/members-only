extends layout

block content
    h1= title

    form(method='POST', action='')
        label(for='title') title:
        input(name='title' id='title' type='text' required=true value=(underfined===message ? '': message.title))
        label(for='message') message:
        input(name='message' id='message' type='text' required=true value=(underfined===message ? '': message.message))
        button(type='submit') submit

    
    if errors 
        ul
            for error in errors
                li!= error.msg 