extends layout

block content
    h1= title

    form(method='POST' action='')
        label(for='username') username:
        input(name='username' type='text' required=true value=(underfined===user ? '': user.username))
        label(for='password') password:
        input(name='password' type='text' required=true)
        button(type='submit') submit
        
    if errors 
        ul
            for error in errors
                li!= error.msg    